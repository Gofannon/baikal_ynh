{
    "packaging_format": 1,
    "id": "baikal",
    "name": "Baikal",
    "description": {
        "en": "Lightweight CalDAV+CardDAV server",
        "fr": "Serveur CalDAV+CardDAV lÃ©ger"
    },
    "url": "http://baikal-server.com/",
    "license": "GPL-3",
    "version": "0.4.4",
    "maintainer": {
        "name": "julien",
        "email": "julien.malik@paraiso.me"
    },
    "multi_instance": false,
    "requirements": {
        "yunohost": ">= 2.3.16"
    },
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for baikal"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for baikal"
                },
                "example": "/baikal",
                "default": "/baikal"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Choose a password for baikal admin"
                },
                "example": "mysecret"
            }
        ]
    }
}
