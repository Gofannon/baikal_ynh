{
    "name": "Baikal",
    "id": "baikal",
    "packaging_format": 1,
    "description": {
        "en": "Lightweight CalDAV+CardDAV server",
        "fr": "Serveur CalDAV+CardDAV l√©ger"
    },
    "url": "http://baikal-server.com/",
    "maintainer": {
        "name": "julien",
        "email": "julien.malik@paraiso.me"
    },
    "multi_instance": "true",
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for baikal"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for baikal"
                },
                "example": "/baikal",
                "default": "/baikal"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Choose a password for baikal admin"
                },
                "example": "mysecret"
            }
        ]
    }
}
